# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.{js,jsx,ts,tsx,json}]
indent_size = 2

[*.sql]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.sh]
indent_size = 2

[*.bat]
indent_size = 2

[*.cmd]
indent_size = 2

[package.json]
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.{diff,patch}]
trim_trailing_whitespace = false