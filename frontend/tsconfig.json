{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "src/.umi/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    // 添加这些额外配置以提高开发体验
    "declaration": false,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/pages/**/*",
    "src/components/**/*",
    "src/layouts/**/*",
    "src/utils/**/*",
    "src/services/**/*",
    "src/models/**/*",
    "src/assets/**/*",
    "src/styles/**/*",
    "src/types/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/.umi/**/*.d.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/.umi/**/*",
    "src/.umi-production/**/*"
  ]
}
