{
  "name": "ug",
  "version": "1.0.0",
  "description": "UG管理系统 - 基于UMI + Egg.js的现代化后台管理系统",
  "private": true,
  "workspaces": {
    "packages": [
      "frontend",
      "backend"
    ]
  },
  "scripts": {
    "postinstall": "npm run setup",
    "setup": "pnpm setup:frontend && pnpm setup:backend",
    "setup:frontend": "cd frontend && pnpm install",
    "setup:backend": "cd backend && pnpm install",
    "dev": "pnpm dev:backend & pnpm dev:frontend",
    "dev:backend": "cd backend && npx egg-bin dev",
    "dev:frontend": "cd frontend && pnpm dev",
    "build": "pnpm build:frontend",
    "build:frontend": "cd frontend && pnpm build",
    "test": "pnpm test:backend & pnpm test:frontend",
    "test:backend": "cd backend && pnpm test",
    "test:frontend": "cd frontend && pnpm test",
    "lint": "pnpm lint:backend & pnpm lint:frontend",
    "lint:backend": "cd backend && pnpm lint",
    "lint:frontend": "cd frontend && pnpm lint",
    "lint:fix": "pnpm lint:backend:fix & pnpm lint:frontend:fix",
    "lint:backend:fix": "cd backend && pnpm run lint:fix",
    "lint:frontend:fix": "cd frontend && pnpm run lint:fix",
    "fix-ts": "cd backend && ..\\scripts\\fix-tsconfig.bat",
    "clean": "pnpm clean:backend & pnpm clean:frontend",
    "clean:backend": "cd backend && rimraf node_modules",
    "clean:frontend": "cd frontend && rimraf node_modules",
    "db:migrate": "cd backend && pnpm db:migrate",
    "db:seed": "cd backend && pnpm db:seed",
    "start": "pnpm start:backend & pnpm start:frontend",
    "start:backend": "cd backend && pnpm start",
    "start:frontend": "cd frontend && pnpm start",
    "spellcheck": "npx cspell \"frontend/src/**/*.{js,ts,jsx,tsx,json,md}\" \"backend/app/**/*.{js,ts,json,md}\" \"backend/config/**/*.{js,ts,json,md}\" --exclude \"node_modules\" --exclude \"dist\" --exclude \"logs\" --exclude \"run\" --exclude \"coverage\" --exclude \".umi\" --exclude \".umi-production\""
  },
  "dependencies": {
    "@types/node": "^24.3.1",
    "typescript": "5.9.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": "^20.19.0"
  },
  "resolutions": {
    "undici": "^5.28.4",
    "antd": "^5.8.6",
    "eslint": "^9.35.0"
  },
  "overrides": {
    "undici": "^5.28.4",
    "antd": "^5.8.6",
    "eslint": "^9.35.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "umi",
    "egg.js",
    "react",
    "typescript",
    "antd",
    "admin",
    "rbac"
  ],
  "author": "UG Team",
  "license": "MIT",
  "packageManager": "pnpm@8.15.8"
}