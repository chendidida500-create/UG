{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    // 添加类型定义路径配置
    "typeRoots": [
      "./node_modules/@types"
    ],
    // 移除 types 数组，让 TypeScript 自动解析类型,
    // 忽略弃用警告
    "ignoreDeprecations": "5.0"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "run",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}