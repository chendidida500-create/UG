{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    // 添加类型定义路径配置
    "typeRoots": ["./node_modules/@types"],
    // 添加特定模块的类型解析配置
    "types": ["node"],
    // 忽略弃用警告
    "ignoreDeprecations": "6.0"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "run",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
