{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "frontend/src/pages/**/*.tsx",
    "frontend/src/components/**/*.tsx",
    "frontend/src/layouts/**/*.tsx",
    "frontend/src/**/*.ts",
    "backend/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
