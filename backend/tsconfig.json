{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/config/*": [
        "./config/*"
      ],
      "@/database/*": [
        "./database/*"
      ]
    },
    // 添加类型定义路径配置
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/@types"
    ],
    // 添加特定模块的类型解析配置
    "types": [
      "node",
      "accepts",
      "body-parser",
      "connect",
      "content-disposition",
      "cookies",
      "depd",
      "express",
      "express-serve-static-core",
      "http-assert",
      "http-errors",
      "keygrip",
      "mime",
      "qs",
      "range-parser",
      "send",
      "serve-static"
    ],
    // 忽略弃用警告
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "../typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "run",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}