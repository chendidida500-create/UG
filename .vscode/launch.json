{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "启动 NocoBase 开发服务器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "args": [
        "dev"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "调试当前 TypeScript 文件",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Jest 测试",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    },
    {
      "name": "Chrome 调试",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:13000",
      "webRoot": "${workspaceFolder}/src",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    }
  ]
}