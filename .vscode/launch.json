{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "启动前后端开发服务器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "启动前端开发服务器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/umi",
      "args": [
        "dev"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "启动后端开发服务器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/egg-bin",
      "args": [
        "dev"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "调试当前 TypeScript 文件",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Jest 测试",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    },
    {
      "name": "Chrome 调试",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:15000",
      "webRoot": "${workspaceFolder}/frontend/src",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile"
    }
  ]
}