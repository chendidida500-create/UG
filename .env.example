# 环境变量配置文件
# 复制此文件为 .env 并修改相应的值

# 数据库配置
MYSQL_ROOT_PASSWORD=your_super_secret_root_password_2024
MYSQL_DATABASE=ug_management
MYSQL_USER=ug_user
MYSQL_PASSWORD=your_database_password_2024

# Redis 配置
REDIS_PASSWORD=your_redis_password_2024

# JWT 配置
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_2024
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_2024

# Grafana 配置
GRAFANA_PASSWORD=your_grafana_admin_password_2024
GRAFANA_SECRET_KEY=your_grafana_secret_key_2024

# 邮件配置 (可选)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your_email_password
SMTP_FROM=UG管理系统 <noreply@example.com>

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# 系统配置
SYSTEM_NAME=UG管理系统
SYSTEM_URL=https://yourdomain.com
API_URL=https://yourdomain.com/api

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_2024
CORS_ORIGIN=https://yourdomain.com

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30

# 监控配置
PROMETHEUS_RETENTION=30d
GRAFANA_DATA_SOURCE_URL=http://prometheus:9090

# 备份配置
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1